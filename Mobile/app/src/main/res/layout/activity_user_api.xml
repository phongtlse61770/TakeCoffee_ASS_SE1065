<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lam.coffeeproject.UserAPI">

    <Button
        android:id="@+id/btnCheckWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnViewMenu"
        android:text="Check Wallet"
        android:onClick="CheckWallet"
        android:textSize="19dp"/>

    <Button
        android:id="@+id/btnViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="View menu today"
        android:onClick="ViewMenuToday"
        android:textSize="19dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="COFFEE"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, ....."
        android:layout_marginStart="23dp"
        android:textSize="21dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnViewLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Store Location"
        android:layout_below="@+id/btnCheckWallet"
        android:layout_alignParentStart="true"
        android:textSize="19dp"
        android:onClick="ViewStoreLocation"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnViewLocation"
        app:srcCompat="@drawable/coffee1" />
</RelativeLayout>
