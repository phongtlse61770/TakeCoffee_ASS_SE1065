<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             tools:context="com.example.lam.coffeeproject.ProductFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/placeholder" android:id="@+id/productImageView"
                android:layout_weight="0.25"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/productNameTextview" android:textStyle="normal|bold"
                    android:textSize="18sp" android:fontFamily="sansTextView-serif" tools:text="Product name"
                    android:maxLines="2"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/priceTextView" tools:text="Price:"/>
            <TextView
                    android:text="Category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/productCategoryTextView"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25" android:weightSum="1">
            <Button
                    android:layout_width="match_parent"
                    android:id="@+id/upButton" android:layout_height="0dp" android:layout_weight="0.4"
                    android:drawableTop="@android:drawable/arrow_up_float"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/productQuantityTextView" android:layout_weight="0.2"
                    android:textAlignment="center" android:textStyle="normal|bold" android:text="0"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/downButton" android:layout_weight="0.4"
                    android:drawableBottom="@android:drawable/arrow_down_float"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
