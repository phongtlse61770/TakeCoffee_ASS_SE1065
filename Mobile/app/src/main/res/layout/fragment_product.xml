<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             tools:context="com.example.lam.coffeeproject.ProductFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/soda" android:id="@+id/imageView"
                android:layout_weight="0.25"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25" android:weightSum="1">
            <Button
                    android:layout_width="match_parent"
                    android:id="@+id/button8" android:layout_height="0dp" android:layout_weight="0.4"
                    android:drawableTop="@android:drawable/arrow_up_float"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/textView7" android:layout_weight="0.2"
                    android:textAlignment="center" android:textStyle="normal|bold" android:text="0"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/button5" android:layout_weight="0.4"
                    android:drawableBottom="@android:drawable/arrow_down_float"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
