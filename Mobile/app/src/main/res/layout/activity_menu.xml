<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lam.coffeeproject.Menu">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Today Menu"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SODA"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#0066cc"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/soda"
        android:maxWidth="400dp"
        android:maxHeight="150dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView10"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creamsicle Delight Cocktail"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="16dp"
        android:text="Price: "
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getPricefromServer"
        android:textSize="20dp"
        android:layout_above="@+id/button5"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:layout_marginTop="17dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

</RelativeLayout>
